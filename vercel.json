{
    "version": 2,
    "builds": [
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/.*",
        "dest": "api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "API_KEY": "your-api-key",
      "ENVIRONMENT": "production"
    },
    "ignore": [
      ".git",
      ".vscode"
    ]
  }
  